<UserControl x:Class="F1Speed.Wpf.DashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="Black" MinWidth="1000" MinHeight="400">    
    <StackPanel x:Name="LayoutRoot">
        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="9*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="9*" />
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Content="Circuit" HorizontalContentAlignment="Right" />
                <ComboBox Grid.Column="1" />
                <Label Grid.Column="2" Content="Lap Type" HorizontalContentAlignment="Right" />
                <ComboBox Grid.Column="3" />
            </Grid>            
        </Border>        
    </StackPanel>          
</UserControl>
